	<authorEmail>info@astrid-guenther.de</authorEmail>
	<authorUrl>www.astrid-guenther.de</authorUrl>
	<version>##VERSION##</version>
	<description>MOD_AGOSMSFILEUPLOADER_DESCRIPTION</description>
	<namespace>AG\Module\EasyFileUploader</namespace>
	<!-- Front-end files -->
	<files>
		<file module="mod_agosmsfileuploader">mod_agosmsfileuploader</file>
		##MODULE_FILES##
	</files>
	<languages folder="language">
		##LANGUAGE_FILES##
	</languages>
	<!-- Media files -->
	<media folder="media/mod_agosmsfileuploader" destination="mod_agosmsfileuploader">
		##MEDIA_FILES##
	</media>

	<scriptfile>script.php</scriptfile>
	<config>
		<fields name="params" addfieldpath="/modules/mod_agosmsfileuploader/elements">
			<fieldset name="basic">
				<!-- Basic Required Fields -->
				<field name="ag_parent" 
					type="fixedfolderlist" 
					default="images" 
					label="MOD_AGOSMS_PARENT_LABEL" 
					directory="" 
					description="MOD_AGOSMS_PARENT_DESC" 
					hide_none="true" 
					hide_default="true" 
					exclude="^[Aa]dministrator$|^[Cc]ache$|^[Cc]omponents$|^[Cc]li$|^[Ii]ncludes$|^[Ll]anguage$|^[Ll]ibraries$|^[Ll]ogs$|^[Mm]odules$|^[Pp]lugins$|^[Tt]emplates$|^[Xx]mlrpc$" 
				/>
				<field name="ag_folder" 
					type="text" 
					default="" 
					label="MOD_AGOSMS_FOLDER_LABEL" 
					description="MOD_AGOSMS_FOLDER_DESC" 
				/>
				<field name="ag_maxsize" 
					type="text" 
					default="1000000" 
					label="MOD_AGOSMS_MAXSIZE_LABEL" 
					description="MOD_AGOSMS_MAXSIZE_DESC" 
				/>
				<!-- Custom Text Fields -->
				<field name="ag_spacer_custom" 
					type="spacer" 
					label="MOD_AGOSMS_CUSTOM_SPACER" 
				/>
				<field name="ag_custom" 
					type="radio" 
					default="1" 
					label="MOD_AGOSMS_CUSTOM_LABEL" 
					description="MOD_AGOSMS_CUSTOM_DESC"
					class="btn-group btn-group-yesno"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="ag_label" 
					type="text" 
					default="Choose a file to upload:" 
					label="MOD_AGOSMS_LABELTEXT_LABEL" 
					description="MOD_AGOSMS_LABELTEXT_DESC" 
				/>
				<field name="ag_button" 
					type="text" 
					default="Upload File" 
					label="MOD_AGOSMS_BUTTON_LABEL" 
					description="MOD_AGOSMS_BUTTON_DESC" 
				/>
				<field name="ag_question" 
					type="text" 
					default="Replace existing files with uploaded files?" 
					label="MOD_AGOSMS_QUESTION_LABEL" 
					description="MOD_AGOSMS_QUESTION_DESC" 
				/>
				<field name="ag_yes" 
					type="text" 
					default="Yes" 
					label="MOD_AGOSMS_YESTEXT_LABEL" 
					description="MOD_AGOSMS_YESTEXT_DESC" 
				/>
				<field name="ag_no" 
					type="text" 
					default="No" 
					label="MOD_AGOSMS_NOTEXT_LABEL" 
					description="MOD_AGOSMS_NOTEXT_DESC" 
				/>
				<!-- Security -->
				<field name="ag_spacer_details" 
					type="spacer" 
					label="MOD_AGOSMS_DETAILS_SPACER" 
				/>
				<field name="ag_filetypes" 
					type="textarea" 
					default="image/gif;image/jpeg;image/pjpeg;image/png;application/pdf;application/msword;application/zip;application/x-compressed;application/x-zip-compressed;multipart/x-zip;application/excel;application/vnd.ms-excel;application/x-excel;application/x-msexcel" 
					label="MOD_AGOSMS_FILETYPES_LABEL" 
					description="MOD_AGOSMS_FILETYPES_DESC" 
					rows="10" 
					cols="40" 
				/>
				<field name="ag_default_replace" 
					type="radio" 
					default="0" 
					label="MOD_AGOSMS_DEFAULT_REPLACE_LABEL" 
					description="MOD_AGOSMS_DEFAULT_REPLACE_DESC"
					class="btn-group btn-group-yesno"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="ag_replace" 
					type="radio" 
					default="1" 
					label="MOD_AGOSMS_REPLACE_LABEL" 
					description="MOD_AGOSMS_REPLACE_DESC"
					class="btn-group btn-group-yesno"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="ag_scriptsinarchives" 
					type="radio" 
					default="0" 
					label="MOD_AGOSMS_SCRIPTS_IN_ARCHIVE_LABEL" 
					description="MOD_AGOSMS_SCRIPTS_IN_ARCHIVE_DESC"
					class="btn-group btn-group-yesno"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<!-- Formatting -->
				<field name="ag_spacer_format" 
					type="spacer" 
					label="MOD_AGOSMS_FORMAT_SPACER" 
				/>
				<field name="ag_variable" 
					type="text" 
					default="fileToUpload" 
					label="MOD_AGOSMS_VARIABLE_LABEL" 
					description="MOD_AGOSMS_VARIABLE_DESC" 
				/>
				<field name="ag_multiple" 
					type="list" 
					default="1" 
					label="MOD_AGOSMS_MULTIPLE_LABEL" 
					description="MOD_AGOSMS_MULTIPLE_DESC"
				>
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
					<option value="6">6</option>
					<option value="7">7</option>
					<option value="8">8</option>
					<option value="9">9</option>
					<option value="10">10</option>
				</field>
				<field name="ag_shownofile" 
					type="radio" 
					default="1" 
					label="MOD_AGOSMS_SHOW_NO_FILE_UPLOADED_NOTICE_LABEL" 
					description="MOD_AGOSMS_SHOW_NO_FILE_UPLOADED_NOTICE_DESC"
					class="btn-group btn-group-yesno"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<!-- Advanced Features -->
				<field name="ag_spacer_advanced" 
					type="spacer" 
					label="MOD_AGOSMS_ADVANCED_SPACER" 
				/>
				<field name="ag_user" 
					type="radio" 
					default="0" 
					label="MOD_AGOSMS_USER_LABEL" 
					description="MOD_AGOSMS_USER_DESC"
					class="btn-group btn-group-yesno"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="ag_mimedetect" 
					type="easydiagnostic" 
					label="MOD_AGOSMS_DIAGNOSTIC_LABEL" 
					description="MOD_AGOSMS_DIAGNOSTIC_DESC"
				/>
			</fieldset>
			<fieldset name="advanced">
				<!-- Module Class -->
				<!--<field name="ag_spacer_css" 
					type="spacer" 
					label="MOD_AGOSMS_FILTER_SPACER" 
				/>-->
				<field name="moduleclass_sfx" 
					type="text" 
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" 
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" 
					rows="3"
				/>
				<field name="layout" 
					type="modulelayout" 
					label="JFIELD_ALT_LAYOUT_LABEL" 
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" 
				/>
			</fieldset>
		</fields>
	</config>
</extension>