<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_AGOSMS_CATEGORY_VIEW_DEFAULT_TITLE">
		<help
			key = "JHELP_MENUS_MENU_ITEM_AGOSM_CATEGORY"
		/>
		<message>
			<![CDATA[COM_AGOSMS_CATEGORY_VIEW_DEFAULT_DESC]]>
		</message>
	</layout>

	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset
			name="request"
			addfieldprefix="Joomla\Component\Categories\Administrator\Field"
			>
			<field
				name="id"
				type="modal_category"
				label="COM_AGOSMS_FIELD_CATEGORY_LABEL"
				extension="com_agosms"
				required="true"
				select="true"
				new="true"
				edit="true"
				clear="true"
			/>
		</fieldset>
	</fields>

	<!-- Add fields to the parameters object for the layout. -->
	<fields name="params">
		<fieldset name="basic" label="JGLOBAL_CATEGORY_OPTIONS">

			<field
				name="spacer1"
				type="spacer"
				label="JGLOBAL_SUBSLIDER_DRILL_CATEGORIES_LABEL"
				class="text"
			/>

			<field
				name="show_category_title"
				type="list"
				label="JGLOBAL_SHOW_CATEGORY_TITLE"
				useglobal="true"
				class="custom-select-color-state"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field
				name="show_description"
				type="list"
				label="JGLOBAL_SHOW_CATEGORY_DESCRIPTION_LABEL"
				useglobal="true"
				class="custom-select-color-state"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field
				name="maxLevel"
				type="list"
				label="JGLOBAL_MAXIMUM_CATEGORY_LEVELS_LABEL"
				useglobal="true"
				>
				<option value="-1">JALL</option>
				<option value="0">JNONE</option>
				<option value="1">J1</option>
				<option value="2">J2</option>
				<option value="3">J3</option>
				<option value="4">J4</option>
				<option value="5">J5</option>
			</field>

			<field
				name="show_empty_categories"
				type="list"
				label="JGLOBAL_SHOW_EMPTY_CATEGORIES_LABEL"
				useglobal="true"
				class="custom-select-color-state"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field
				name="show_cat_items"
				type="list"
				label="COM_AGOSMS_FIELD_SHOW_CAT_ITEMS_LABEL"
				useglobal="true"
				class="custom-select-color-state"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>

		<fieldset name="advanced" label="JGLOBAL_LIST_LAYOUT_OPTIONS">

			<field
				name="spacer2"
				type="spacer"
				label="JGLOBAL_SUBSLIDER_DRILL_CATEGORIES_LABEL"
				class="text"
			/>

			<field
				name="filter_field"
				type="list"
				label="JGLOBAL_FILTER_FIELD_LABEL"
				default=""
				useglobal="true"
				class="custom-select-color-state"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field
				name="show_pagination_limit"
				type="list"
				label="JGLOBAL_DISPLAY_SELECT_LABEL"
				useglobal="true"
				class="custom-select-color-state"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field
				name="show_headings"
				type="list"
				label="JGLOBAL_SHOW_HEADINGS_LABEL"
				useglobal="true"
				class="custom-select-color-state"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field
				name="show_image_heading"
				type="list"
				label="COM_AGOSMS_FIELD_CONFIG_SHOW_IMAGE_LABEL"
				useglobal="true"
				class="custom-select-color-state"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field
				name="show_position_headings"
				type="list"
				label="COM_AGOSMS_FIELD_CONFIG_POSITION_LABEL"
				useglobal="true"
				class="custom-select-color-state"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field
				name="show_state_headings"
				type="list"
				label="COM_AGOSMS_FIELD_CONFIG_STATE_LABEL"
				useglobal="true"
				class="custom-select-color-state"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field
				name="show_pagination"
				type="list"
				label="JGLOBAL_PAGINATION_LABEL"
				useglobal="true"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
				<option value="2">JGLOBAL_AUTO</option>
			</field>

			<field
				name="show_pagination_results"
				type="list"
				label="JGLOBAL_PAGINATION_RESULTS_LABEL"
				useglobal="true"
				class="custom-select-color-state"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>

			</field>

			<field
 				name="agosms_display_num"
 				type="list"
 				label="COM_AGOSMS_NUMBER_AGOSMS_LIST_LABEL"
 				useglobal="true"
 				>
 				<option value="5">J5</option>
 				<option value="10">J10</option>
 				<option value="15">J15</option>
 				<option value="20">J20</option>
 				<option value="25">J25</option>
 				<option value="30">J30</option>
 				<option value="50">J50</option>
 				<option value="100">J100</option>
 				<option value="0">JALL</option>
 			</field>

			<field
				name="initial_sort"
				type="list"
				label="COM_AGOSMS_FIELD_INITIAL_SORT_LABEL"
				useglobal="true"
				>
				<option value="name">COM_AGOSMS_FIELD_VALUE_NAME</option>
				<option value="sortname">COM_AGOSMS_FIELD_VALUE_SORT_NAME</option>
				<option value="ordering">COM_AGOSMS_FIELD_VALUE_ORDERING</option>
				<option value="featuredordering">COM_AGOSMS_FIELD_VALUE_ORDERING_FEATURED</option>
			</field>
		</fieldset>

		<fieldset name="agosm" label="COM_AGOSMS_BASIC_OPTIONS_FIELDSET_LABEL"
			addfieldprefix="Joomla\Component\Fields\Administrator\Field">

			<field
				name="agosm_layout"
				type="componentlayout"
				label="JGLOBAL_FIELD_LAYOUT_LABEL"
				class="custom-select"
				menuitems="true"
				extension="com_agosms"
				view="agosm"
			/>

			<field
				name="show_agosm_category"
				type="list"
				label="COM_AGOSMS_FIELD_AGOSM_SHOW_CATEGORY_LABEL"
				useglobal="true"
				class="custom-select-color-state"
				>
				<option value="hide">JHIDE</option>
				<option value="show_no_link">COM_AGOSMS_FIELD_VALUE_NO_LINK</option>
				<option value="show_with_link">COM_AGOSMS_FIELD_VALUE_WITH_LINK</option>
			</field>

			<field
				name="show_agosm_list"
				type="list"
				label="COM_AGOSMS_FIELD_AGOSM_SHOW_LIST_LABEL"
				useglobal="true"
				class="custom-select-color-state"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field
				name="show_name"
				type="list"
				label="COM_AGOSMS_FIELD_PARAMS_NAME_LABEL"
				useglobal="true"
				class="custom-select-color-state"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field
				name="show_state"
				type="list"
				label="COM_AGOSMS_FIELD_PARAMS_STATE-COUNTY_LABEL"
				useglobal="true"
				showon="show_info:1"
				class="custom-select-color-state"
				>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>
	</fields>
</metadata>
